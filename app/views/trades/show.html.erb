<% title "Trueque Pactado" %>

<div id="trade-info">
  <div class="left" id="given-book">
    <div class="left">
      <%= book_image(@trade.book1, :thumb) %>
    </div>
    
    <div class="rleft trade-book-info">
      <h2><%= @trade.book1.title %></h2>
      <p>
        <%= @trade.book1.author_names %>
      </p>
      <div class="user">
        <%= link_to @trade.user1.name_or_login, @trade.user1 %>
      </div>
    </div>
  </div>
  
  
  <div class="right" id="received-book">
    <div class="left"><%= book_image(@trade.book2, :thumb) %></div>
    <div class="rleft trade-book-info">
      <h2><%= @trade.book2.title %></h2>
      <p>
        <%= @trade.book2.author_names %>
      </p>
      <div class="user">
        <%= link_to @trade.user2.name_or_login, @trade.user2 %>
      </div>
    </div>
  </div>
  
  <%= clear %>
  
  <div id="grade">
    <h2>Califica este trueque</h2>
    
    <p>
      La calificación de los truques es vital para el funcionamiento de la comunidad. Así, las personas podrán saber si el usuario con el que están realizando el trueque es confiable o no.
    </p>
    
    <%= form_for [@trade, @trade.grades.build] do |f| %>
      <%= f.label :score, "Calificación" %>
      <%= f.select :score, grade_options %>
      <%= f.submit "Enviar calificación" %>
    <% end %>
  </div>
  
</div>
<%= clear %>

<div>
  
</div>

<%= render "comments/list_and_form", :commentable => @trade %>
