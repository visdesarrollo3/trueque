<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for?(:title) ? yield(:title) : "Trueque" %></title>
    <%= stylesheet_link_tag "jquery.ui", "application", :cache => true %>
    <%= javascript_include_tag 'jquery.min','jquery.ui.min', 'autocomplete-rails','jquery.tools.min','swfobject.js', 'jquery.ytchromeless.min.js', 'rails', 'application', :cache => true %>
    <%= csrf_meta_tag %>
    <%= yield(:head) %>
  </head>
  <body>
    <div id="container">
      <div id="user_nav">
        <% if current_user %>
          Hola! <%= current_user.name %>
          <%= link_to "Editar perfíl", edit_user_path(current_user) %> |
          <%= link_to "Cerrar sesión", logout_path %>
        <% else %>
          <%= link_to "Register", new_user_path %> |
          <%= link_to "Login", login_path %>
        <% end %>
      </div>
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, :id => "flash_#{name}", :class => "alert" %>
      <% end %>
      
      <%= content_tag :h1, yield(:title) if show_title? %>
      
      <%= clear %>
      
      <div id="navigation">
        <%= render_navigation %>
      </div>
      
      <%= clear %>
      <%= yield %>
      <%= clear %>
    </div>
    
    
    <div class="overlay" id="overlay">
    	<div class="contentWrap"></div>
    </div>
  </body>
</html>
