<% title "Administrar Páginas" %>

<% if can? :create, Page %>
<div class="actions">
  <%= link_to "Crear página", new_page_path %>
</div>
<% end %>

<table>
  <tr>
    <th>Name</th>
    <th>Permalink</th>
  </tr>
  <% for page in @pages %>
    <tr>
      <td><%= page.name %></td>
      <td><%= page.permalink %></td>
      <td><%= link_to "Show", page %></td>
      <td><%= link_to "Edit", edit_page_path(page) %></td>
      <td><%= link_to "Destroy", page, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>
