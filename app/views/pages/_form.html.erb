<%= form_for @page do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :content %><br />
    <%= f.textile_editor :content %>
  </p>
  <p><%= f.submit %></p>
  <%= textile_editor_initialize(:framework => :jquery) %>
<% end %>
