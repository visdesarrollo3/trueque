
<% content_for :subheader do %>
<div id="sub-header">
  <div id="slider">
    <% for banner in @banners %>
    <%= link_to_or_default image_tag(banner.photo.url), banner %>
    <% end %>
  </div>

  <div id="login" class="right">
    <div class = "quoted-title" id="login-title">
      <% if current_user %>
      HOLA USUARIO
      <% else %>
      Acceso usuarios
      <% end %>
    </div>

    <div id = "login-dashboard">
      <% if current_user %>
        HOLA USUARIO
        <%= link_to "Cerrar sesión", logout_path %>
      <% else %>
        <%= render :partial => "user_sessions/small" %>
      <% end %>
    </div>
  </div> <!-- End of login div -->
  <%= clear %>
</div> <!-- End of sub-header div -->
<% end %>  <!-- END OF SUB-HEADER -->


<% content_for :sidebar do %>
<div id="sidebar">
  <div id="current-poll">
    <div class = "quoted-title" id="login-title">
      Encuesta
    </div>
    <div id="question">
      ¿Cuál es su género preferido?
    </div>
    <div id="results">
      <ul class="options" style="list-style: none; padding: 0; margin: 5px 0 5px;">
        <li><%= radio_button_tag :drama, "Drama" %> Drama</li>
        <li><%= radio_button_tag :drama, "Drama" %> Comedia</li>
        <li><%= radio_button_tag :drama, "Drama" %> Crímen</li>
        <li><%= radio_button_tag :drama, "Drama" %> Acción</li>
      </ul>
      <%= submit_tag "Votar", :class => "btn" %>
    </div>
  </div>
</div> <!-- End of sidebar div -->
<% end %>  <!-- END OF SIDEBAR -->



<div class="left">
  <h1>Últimos libros</h1>
</div>


























