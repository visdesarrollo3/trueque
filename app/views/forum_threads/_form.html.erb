<%= form_for @forum_thread do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.label :forum_category_id %><br />
    <%= f.text_field :forum_category_id %>
  </p>
  <p><%= f.submit %></p>
<% end %>
