<% if @user %>
  <% title "Todos los libros de #{@user.name}" %>
<% else %>
  <% title "Todos los libros" %>
<% end %>


<table>
  <tr>
    <th>Title</th>
    <th>Available</th>
    <th>Published Date</th>
    <th>Editorial</th>
    <th>Isbn</th>
    <th>User</th>
    <th>Health Status</th>
  </tr>
  <% for book in @books %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.available %></td>
      <td><%= book.published_date %></td>
      <td><%= book.editorial %></td>
      <td><%= book.isbn %></td>
      <td><%= book.user_id %></td>
      <td><%= book.health_status %></td>
      <td><%= link_to "Show", book %></td>
      <td><%= link_to "Edit", edit_book_path(book) %></td>
      <td><%= link_to "Destroy", book, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Book", new_book_path %></p>
