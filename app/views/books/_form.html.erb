<%= form_for @book do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :isbn %> <%= modal_to "¿Qué es ISBN?", static_path('que-es-isbn'), :id => "div-id" %><br />
    <%= f.text_field :isbn %>
  </p>
  
  <!-- <p>
    <%= f.label :available %><br />
    <%= f.check_box :available %>
  </p> -->
  <!-- Autor(es) -->
  
  <p>
    <%= f.label :author %><br />
    <%= f.text_field :author_names %>
  </p>
  
  <p>
    <%= f.label :published_date %><br />
    <%= f.text_field :published_date %>
  </p>
  
  <p>
    <%= f.label :editorial %><br />
    <%= f.text_field :editorial %>
  </p>
  
  <!-- Género -->
  
  <p>
    <%= f.label :tag_list %><br />
    <%= f.text_field :tag_list %>
  </p>
  
  <p>
    <%= f.label :synopsis %><br />
    <%= f.text_area :synopsis %>
  </p>
  
  <p>
    <%= f.label :health_status %><br />
    <%= f.text_field :health_status %>
  </p>
  
  <p>
    <%= f.label :health_description %><br />
    <%= f.text_area :health_description %>
  </p>
  
  <p><%= f.submit %></p>
<% end %>

<% content_for :head do %>
  <script type="text/javascript">
    jQuery(function($){
      $("#book_author_names").autocomplete({
        source: '<%= search_author_path %>'
      });
    })
  </script>
<% end %>
