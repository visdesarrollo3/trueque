<div id="login_form_sidebar">
<%= form_for UserSession.new do |f| %>
  <p>
    <%= f.label :login, "Usuario" %><br />
    <%= f.text_field :login, :size => 20 %>
  </p>
  <p>
    <%= f.label :password, "Contraseña" %><br />
    <%= f.password_field :password, :size => 20 %>
  </p>
  <p><%= f.submit :"Ingresar", :class => "btn" %></p>
<% end %>
<p style="text-align: center;">
  Si no tienes una cuenta, <%= link_to "crea una aquí", new_user_path %>.
</p>
</div>